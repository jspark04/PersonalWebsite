---
import type { CollectionEntry } from 'astro:content';

interface Props {
  note: CollectionEntry<'notes'>;
}

const { note } = Astro.props;
---

<a href={`/notes/${note.slug}`} class="block group">
  <article class="p-6 bg-surface border border-white/5 rounded-lg hover:border-primary/50 transition-all duration-300 h-full flex flex-col">
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-xl font-bold group-hover:text-primary transition-colors">
        {note.data.title}
      </h3>
      <time datetime={note.data.pubDate.toISOString()} class="text-xs text-muted font-mono">
        {note.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', timeZone: 'UTC' })}
      </time>
    </div>
    
    <p class="text-muted mb-4 flex-grow">
      {note.data.description}
    </p>
    
    {note.data.tags && (
      <div class="flex gap-2 mt-auto">
        {note.data.tags.map(tag => (
          <span class="text-xs px-2 py-1 rounded-full bg-white/5 text-muted group-hover:text-text transition-colors">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </article>
</a>
