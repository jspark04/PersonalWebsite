---
import { siteConfig } from '../data/site';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import InteractiveBackground from '../components/InteractiveBackground.astro';

interface Props {
	title: string;
    description?: string;
}

const { title, description = siteConfig.tagline } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | {siteConfig.name}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-bg text-text font-sans min-h-screen flex flex-col overflow-x-hidden selection:bg-primary selection:text-bg">
        <InteractiveBackground />
        <Navbar />
		<main class="flex-grow container mx-auto px-4 py-8 relative z-10">
			<slot />
		</main>
        <Footer />
	</body>
</html>

<style is:global>
    /* Custom scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: #0a0a0f;
    }
    ::-webkit-scrollbar-thumb {
        background: #333;
        border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
</style>
