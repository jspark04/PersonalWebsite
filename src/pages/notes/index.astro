---
import Layout from '../../layouts/Layout.astro';
import sql from '../../lib/db';
import { marked } from 'marked';
import MarkdownEditor from '../../components/MarkdownEditor.astro';

export const prerender = false;

// Fetch dynamic notes (DB)
let dbNotes = [];
const search = Astro.url.searchParams.get('search');
const tag = Astro.url.searchParams.get('tag');

try {
  const conditions = [];
  if (search) {
      conditions.push(sql`(title ILIKE ${'%' + search + '%'} OR content ILIKE ${'%' + search + '%'})`);
  }
  if (tag) {
      conditions.push(sql`${tag} = ANY(tags)`);
  }

  dbNotes = await sql`
    SELECT * FROM notes 
    ${conditions.length > 0 ? sql`WHERE ${conditions.length > 1 ? sql`${conditions[0]} AND ${conditions[1]}` : conditions[0]}` : sql``}
    ORDER BY created_at DESC
  `;
} catch (e) {
  console.error('Failed to fetch notes:', e);
}

const isLoggedIn = Astro.cookies.get('auth_session')?.boolean();
---

<Layout title="Notes">
	<section class="max-w-4xl mx-auto mb-20">
		<div class="flex justify-between items-center mb-8">
			<h1 class="text-4xl font-bold">Notes</h1>
			{!isLoggedIn ? (
				<div class="relative group">
					<button id="login-toggle" class="text-sm text-muted hover:text-primary transition-colors">
						Admin Access
					</button>
					<form id="login-form" class="hidden absolute right-0 top-full mt-2 p-4 bg-surface border border-white/10 rounded-lg shadow-xl w-64 z-50">
						<input 
							type="password" 
							name="password" 
							placeholder="Password" 
							class="w-full bg-black/30 border border-white/10 rounded px-3 py-2 text-white text-sm mb-3 focus:border-primary focus:outline-none"
						/>
						<button type="submit" class="w-full px-4 py-2 bg-primary text-black text-sm font-semibold rounded hover:bg-primary/80 transition-colors">
							Login
						</button>
					</form>
				</div>
			) : (
				<button id="logout-btn" class="text-sm text-muted hover:text-primary transition-colors">
					Logout
				</button>
			)}
		</div>
		
		<!-- Add Note Form -->
		{isLoggedIn && (
			<div class="mb-8 p-6 bg-surface border border-white/10 rounded-lg">
                <MarkdownEditor 
                    submitLabel="Post Note"
                    id="add-note-editor"
                />
			</div>
		)}

		<!-- Search & Filter -->
        <div class="mb-8 flex gap-4">
            <form action="/notes" method="GET" class="flex-1 flex gap-2">
                <input 
                    type="text" 
                    name="search" 
                    placeholder="Search notes..." 
                    value={search || ''}
                    class="flex-1 bg-black/20 border border-white/10 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-primary/50 transition-colors"
                />
                {tag && <input type="hidden" name="tag" value={tag} />}
                <button type="submit" class="bg-white/5 hover:bg-white/10 text-white px-4 py-2 rounded-lg transition-colors font-medium">Search</button>
            </form>
            {(search || tag) && (
                <a href="/notes" class="flex items-center justify-center bg-red-500/10 hover:bg-red-500/20 text-red-500 px-4 py-2 rounded-lg transition-colors border border-red-500/20">
                    Clear Filters
                </a>
            )}
        </div>

		<!-- Dynamic Notes List (Grid Layout) -->
		<div id="notes-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{dbNotes.map((note) => {
                const noteDate = new Date(note.created_at);
                const tags = note.tags || [];
                
                return (
				<div 
                    class="note-card bg-surface/50 backdrop-blur-sm border border-white/5 rounded-xl p-6 relative group hover:border-primary/50 hover:bg-surface/80 transition-all duration-300 cursor-pointer overflow-hidden flex flex-col h-[320px]"
                    id={`note-${note.id}`}
                    data-id={note.id}
                    data-title={note.title}
                    data-content={note.content}
                    data-tags={tags.join(', ')}
                    data-date={noteDate.toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                >
                    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary to-purple-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                    
                    <div class="flex justify-between items-start mb-2">
                        <h2 class="text-xl font-bold text-white group-hover:text-primary transition-colors line-clamp-2">{note.title || 'Untitled'}</h2>
                        <span class="text-xs font-mono text-primary/80 bg-primary/10 px-2 py-1 rounded border border-primary/20 shrink-0 ml-2">
                            {noteDate.toLocaleString('en-US', { month: 'short', day: 'numeric' })}
                        </span>
                    </div>

                    {/* Tags */}
                    <div class="flex flex-wrap gap-2 mb-4">
                        {tags.map((t: string) => (
                            <a href={`/notes?tag=${t}`} class="text-[10px] uppercase font-bold tracking-wider text-muted hover:text-white bg-white/5 hover:bg-white/10 px-2 py-1 rounded transition-colors z-20">
                                {t}
                            </a>
                        ))}
                    </div>

                    <div class="prose prose-invert prose-sm text-gray-400 line-clamp-4 leading-relaxed mb-auto pointer-events-none">
                        <Fragment set:html={marked.parse(note.content)} />
                    </div>

					<div class="flex justify-between items-center text-xs text-muted mt-4 pt-4 border-t border-white/5">
                        <span class="italic opacity-50">Click to read more</span>
						{isLoggedIn && (
							<div class="flex gap-3 z-20">
								<button class="hover:text-primary transition-colors edit-btn font-bold p-1" data-id={note.id} data-title={note.title} data-content={note.content} data-tags={tags.join(', ')}>EDIT</button>
								<button class="hover:text-red-500 transition-colors delete-btn font-bold p-1" data-id={note.id}>DELETE</button>
							</div>
						)}
					</div>
				</div>
			);})}
		</div>
        
        {dbNotes.length === 0 && (
            <div class="text-center py-20">
                <p class="text-muted text-lg">No notes found matching your criteria.</p>
                {(search || tag) && <a href="/notes" class="text-primary hover:underline mt-2 inline-block">Clear filters</a>}
            </div>
        )}
        
        <!-- View Modal -->
        <div id="view-modal" class="hidden fixed inset-0 bg-black/90 z-[60] flex items-center justify-center p-4 backdrop-blur-sm">
            <div class="bg-surface border border-white/10 rounded-2xl w-full max-w-3xl max-h-[85vh] flex flex-col shadow-2xl relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary to-purple-500"></div>
                <button id="close-view" class="absolute top-4 right-4 p-2 text-muted hover:text-white bg-black/50 rounded-full transition-colors z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
                
                <div class="p-8 overflow-y-auto custom-scrollbar">
                    <div class="flex items-center gap-4 mb-6 text-sm text-primary font-mono">
                        <span id="view-date" class="bg-primary/10 px-3 py-1 rounded border border-primary/20"></span>
                    </div>
                    
                    <h2 id="view-title" class="text-4xl font-bold text-white mb-8"></h2>
                    
                    <div id="view-content" class="prose prose-invert prose-lg max-w-none text-gray-300 leading-relaxed"></div>
                </div>
            </div>
        </div>

        <!-- Edit Modal (Hidden by default) -->
        <div id="edit-modal" class="hidden fixed inset-0 bg-black/80 z-50 flex items-center justify-center p-4">
            <div class="bg-surface border border-white/10 rounded-lg p-6 w-full max-w-2xl relative">
                <button id="close-edit" class="absolute top-4 right-4 text-muted hover:text-white">âœ•</button>
                <h3 class="text-xl font-bold mb-4">Edit Note</h3>
                <MarkdownEditor 
                    submitLabel="Save Changes"
                    id="edit-note-editor"
                />
            </div>
        </div>
	</section>
</Layout>

<script>
    // Login Logic
    const loginToggle = document.getElementById('login-toggle');
    const loginForm = document.getElementById('login-form');
    const logoutBtn = document.getElementById('logout-btn');

    loginToggle?.addEventListener('click', (e) => {
        e.stopPropagation();
        loginForm?.classList.toggle('hidden');
    });

    // Close login form when clicking outside
    document.addEventListener('click', (e) => {
        if (!loginForm?.contains(e.target as Node) && e.target !== loginToggle) {
            loginForm?.classList.add('hidden');
        }
    });

    loginForm?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target as HTMLFormElement);
        const password = formData.get('password');
        
        try {
            const res = await fetch('/api/auth/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ password })
            });

            if (res.ok) window.location.reload();
            else alert('Invalid password');
        } catch (err) {
            console.error(err);
        }
    });

    logoutBtn?.addEventListener('click', async () => {
        try {
            await fetch('/api/auth/logout', { method: 'POST' });
            window.location.reload();
        } catch (err) {
            console.error(err);
        }
    });

    // Note Operations - Add Note
    document.querySelector('#add-note-editor')?.addEventListener('editor-submit', async (e: any) => {
        const { title, content, tags } = e.detail;
        
        try {
            const res = await fetch('/api/notes', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ title, content, tags })
            });

            if (res.ok) {
                window.location.reload();
            } else {
                if (res.status === 401) alert('Unauthorized');
                else alert('Failed to save note');
            }
        } catch (err) {
            console.error(err);
            alert('Error saving note');
        }
    });

    // Delete Note
    document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
            if (!confirm('Are you sure you want to delete this note?')) return;
            const id = (e.target as HTMLElement).dataset.id;
            try {
                const res = await fetch(`/api/notes/${id}`, { method: 'DELETE' });
                if (res.ok) window.location.reload();
                else if (res.status === 401) alert('Unauthorized');
                else alert('Failed to delete');
            } catch (err) {
                console.error(err);
            }
        });
    });

    // Close Edit Modal
    const editModal = document.getElementById('edit-modal');
    document.getElementById('close-edit')?.addEventListener('click', () => {
        editModal?.classList.add('hidden');
    });

    // Store editing ID
    let currentEditingId: string | null = null;

    // Open Edit Modal
    document.querySelectorAll('.edit-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const el = e.target as HTMLElement;
            const id = el.dataset.id;
            const currentTitle = el.dataset.title;
            const currentContent = el.dataset.content;
            const currentTags = el.dataset.tags || '';
            
            if (id && currentTitle && currentContent !== undefined) {
                currentEditingId = id;
                const editEditor = document.getElementById('edit-note-editor') as any;
                if (editEditor && editEditor.setValues) {
                    editEditor.setValues(currentTitle, currentContent, currentTags.split(', ').filter(Boolean));
                    editModal?.classList.remove('hidden');
                }
            }
        });
    });

    // View Modal Logic
    const viewModal = document.getElementById('view-modal');
    const closeViewBtn = document.getElementById('close-view');
    const viewTitle = document.getElementById('view-title');
    const viewContent = document.getElementById('view-content');
    const viewDate = document.getElementById('view-date');

    // Close on click outside
    viewModal?.addEventListener('click', (e) => {
        if (e.target === viewModal) viewModal.classList.add('hidden');
    });

    closeViewBtn?.addEventListener('click', () => {
        viewModal?.classList.add('hidden');
    });
    
    // Open Note Logic
    document.querySelectorAll('.note-card').forEach(card => {
        card.addEventListener('click', (e) => {
            // Don't open if clicking admin buttons or tags
            if ((e.target as HTMLElement).closest('.edit-btn') || 
                (e.target as HTMLElement).closest('.delete-btn') ||
                (e.target as HTMLElement).tagName.toLowerCase() === 'a') return;

            const title = (card as HTMLElement).dataset.title;
            const content = (card as HTMLElement).dataset.content;
            const date = (card as HTMLElement).dataset.date;
            
            if (viewTitle) viewTitle.textContent = title || 'Untitled';
            if (viewDate) viewDate.textContent = date || '';
            
           if (viewContent && content) {
               // Render content 
               // For now, simple text or use a client-side parser if available. 
               // Since we don't have marked easily available in this scope without import map or bundle,
               // we will stick to text or reuse the server logic if we were using it there.
               // Re-implementing dynamic import for marked if needed, or just text.
               import('https://cdn.jsdelivr.net/npm/marked/lib/marked.esm.js').then(({ marked }) => {
                    viewContent.innerHTML = marked.parse(content) as string;
               }).catch(() => {
                    viewContent.textContent = content;
               });
           }

            viewModal?.classList.remove('hidden');
        });
    });

    // Handle Edit Submit
    document.querySelector('#edit-note-editor')?.addEventListener('editor-submit', async (e: any) => {
        const { title, content, tags } = e.detail;
        
        if (currentEditingId) {
            try {
                const res = await fetch(`/api/notes/${currentEditingId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ title, content, tags })
                });
                if (res.ok) window.location.reload();
                else if (res.status === 401) alert('Unauthorized');
                else alert('Failed to update');
            } catch (err) {
                console.error(err);
            }
        }
    });

    // Prevent propagation on admin buttons explicitly
    document.querySelectorAll('.edit-btn, .delete-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.stopPropagation();
        });
    });
</script>
