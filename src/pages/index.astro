---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../data/site';
---

<Layout title="Home">
	<section class="min-h-[80vh] flex flex-col justify-center items-start max-w-3xl mx-auto">
		<h1 class="text-6xl md:text-8xl font-bold mb-6 tracking-tighter">
			<span class="bg-clip-text text-transparent bg-gradient-to-r from-text to-muted">
				Hi, I'm {siteConfig.name}
			</span>
		</h1>
		
		<h2 class="text-2xl md:text-3xl text-primary font-light mb-8">
			{siteConfig.role}
		</h2>
		
		<p class="text-xl text-muted leading-relaxed mb-12 max-w-2xl">
			{siteConfig.bio.short}
		</p>

		<div class="flex flex-wrap gap-4">
			<a 
				href="/notes" 
				class="px-8 py-3 bg-surface border border-white/10 rounded-lg hover:border-primary hover:text-primary transition-all duration-300 group"
			>
				Read Notes 
				<span class="inline-block transition-transform group-hover:translate-x-1">â†’</span>
			</a>
			<a 
				href="/about" 
				class="px-8 py-3 bg-transparent border border-transparent text-muted hover:text-text transition-colors duration-300"
			>
				More About Me
			</a>
		</div>
	</section>
</Layout>
